extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required value=(undefined===item ? '' : item.name) )
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            if category.checked
              input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked)
            else
              input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id)
            label(for=category._id) &nbsp;#{category.name}
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(placeholder='Description' name='description' required)= undefined===item ? '' : item.description
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', placeholder='Â£20' name='price' value=(undefined===item ? '' : item.price) required)
    div.form-group
      label(for='numberInStock') Number in stock:
      input#numberInStock.form-control(type='number', placeholder='20' name='numberInStock' value=(undefined===item ? '' : item.numberInStock) required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg